#!/bin/sh
#set -x

if [ $# -ne 1 ]; then
   echo "Usage: mpjboot <machines_file>";
   exit 127
fi 

lines=`cat $1`
count=0

for i in `echo $lines`; do 
  host=`echo $i`    
  ssh $host "cd $MPJ_HOME/bin;./mpjdaemon_linux_x86 start;"
  #ssh $host "cd $MPJ_HOME/bin;./mpjdaemon_linux_ppc_64 start;" 
  #ssh $host "cd $MPJ_HOME/bin;./mpjdaemon_solaris_sparc_64 start;" # solaris_sparc_64
  count=`expr $count + 1`
done
